DROP TABLE IF EXISTS tasks;
CREATE TABLE tasks (
    task_id INTEGER PRIMARY KEY AUTOINCREMENT, 
	user_id INTEGER,
    task_description VARCHAR(200),
    FOREIGN KEY (user_id)  REFERENCES users (user_id) ON DELETE CASCADE
);

